      }

      h3 {
          font-size: 1.2em;
      }

      figure {
          margin-block-start: 0;
          margin-block-end: 0;
          margin-inline-start: 0;
          margin-inline-end: 0;
          text-align: center;
      }

      figcaption,
      footer {
          font-style: italic;
          opacity: 0.5;
          font-size: 0.8em;
      }

      .text li {
          margin: 1em 0;
      }

      .text code {
          font-family: fira-mono, monospace;
      }

      .text p code,
      .text li code {
          background-color: #f3f3f3;
          display: inline;
          width: auto;
          white-space: nowrap;
      }

      .text img {
          max-width: 100%;
      }

